SELLASIST_API_ACCOUNT=ggautolublin
SELLASIST_API_KEY=
# Optional override (for future custom routing); usually keep empty.
SELLASIST_API_BASE_URL=
# Optional: queue batch size for process/main_api_autostacja.robot
SELLASIST_QUEUE_LIMIT=50
# Optional: local fixtures dir for offline API tests/dev
# SELLASIST_API_MOCK_DIR=/absolute/path/to/tests/fixtures/sellasist_api

# Desktop automation mode:
# - sim  : no real desktop automation (safe on macOS/Linux), writes a trace file
# - real : Windows only, uses RPA.Windows (UI Automation) and AUTOSTACJA_EXE
DESKTOP_MODE=sim

# Windows only (example):
# AUTOSTACJA_EXE=C:\Program Files\AutoStacja\autostacja.exe
AUTOSTACJA_EXE=
